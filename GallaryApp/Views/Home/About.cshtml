@using Gallary.Helpers
@model Gallary.Models.DetailsResult
@{
    ViewBag.Title = $"About {Model.Name}";
}

@if (Model.Response != "success")
{
<div class="row my-3">
    <div class="col">@Html.Alert(Model.Error, AlertTypeEnum.Info)</div>
</div>
}
else
{
<h1 class="mt-4"><span class="text-muted">About</span> @Model.Name</h1>
<hr />
<article class="row mt-4">
    <div class="col-12 col-lg-6 col-xl-5 text-center mb-3">
        <img src="@Model.Image.Url" alt="@Model.Name" class="img-thumbnail">
    </div>
    <div class="col">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h2 class="h6">Apperance</h2>
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="row">
                            <p class="col-3 col-lg-3"><strong>Gender</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Appearance.Gender)</p>
                            <div class="w-100"></div>
                            <p class="col-3 col-lg-3"><strong>Race</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Appearance.Race)</p>
                            <div class="w-100"></div>
                            <p class="col-3 col-lg-3"><strong>Height</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Appearance.Height[1])</p>
                            <div class="w-100"></div>
                            <p class="col-3 col-lg-3"><strong>Weight</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Appearance.Weight[1])</p>
                            <div class="w-100"></div>
                            <p class="col-3 col-lg-3"><strong>Eye Color</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Appearance.EyeColor)</p>
                            <div class="w-100"></div>
                            <p class="col-3 col-lg-3"><strong>Hair Color</strong></p>
                            <p class="col-9 col-sm-7">@Html.DisplayFor(m => m.Appearance.HairColor)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        <h2 class="h6">Biography</h2>
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="row">
                            <p class="col-4 col-md-3 col-lg-4 col-xxl-3"><strong>Full Name</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Biography.FullName)</p>
                            <div class="w-100"></div>
                            <p class="col-4 col-md-3 col-lg-4 col-xxl-3"><strong>Alter Egos</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Biography.AlterEgos)</p>
                            <div class="w-100"></div>
                            <p class="col-4 col-md-3 col-lg-4 col-xxl-3"><strong>Aliases</strong></p>
                            <p class="col">@string.Join(", ", Model.Biography.Aliases)</p>
                            <div class="w-100"></div>
                            <p class="col-4 col-md-3 col-lg-4 col-xxl-3"><strong>Place Of Birth</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Biography.PlaceOfBirth)</p>
                            <div class="w-100"></div>
                            <p class="col-4 col-md-3 col-lg-4 col-xxl-3"><strong>First Apperance</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Biography.FirstAppearance)</p>
                            <div class="w-100"></div>
                            <p class="col-4 col-md-3 col-lg-4 col-xxl-3"><strong>Publisher</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Biography.Publisher)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Powerstats
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="row">
                            <p class="col-3"><strong>Intelligence</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Powerstats.Intelligence)</p>
                            <div class="w-100"></div>
                            <p class="col-3"><strong>Power</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Powerstats.Power)</p>
                            <div class="w-100"></div>
                            <p class="col-3"><strong>Speed</strong></p>
                            <p class="col">@string.Join(", ", Model.Powerstats.Speed)</p>
                            <div class="w-100"></div>
                            <p class="col-3"><strong>Strength</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Powerstats.Strength)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseThree">
                        Other Information
                    </button>
                </h2>
                <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="row">
                            <p class="col-3"><strong>Occupation</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Work.Occupation)</p>
                            <div class="w-100"></div>
                            <p class="col-3"><strong>Base</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Work.Base)</p>
                            <div class="w-100"></div>
                            <p class="col-3"><strong>Gorup Affiliation</strong></p>
                            <p class="col">@string.Join(", ", Model.Connections.GorupAffiliation)</p>
                            <div class="w-100"></div>
                            <p class="col-3"><strong>Relatives</strong></p>
                            <p class="col">@Html.DisplayFor(m => m.Connections.Relatives)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>
}