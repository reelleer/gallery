<div class="row">
    <form class="col-sm-12" action="/" method="post">
        <input
            type="text"
            name="query"
            value="@Model.ResultsFor"
            required
        />
    </form>
    @if(Model.Response == "error")  
    { 
        <h2>Got goose bumps! @(Model.Error).</h2>
    }

    <div class="col-sm-12">
    @if (Model.ResultsFor != null)
    {
        <ul>
            @foreach (var hero in Model.Results)
            {
                <li>
                    @hero.Name, @hero.Appearance.Gender
                    <a href="@hero.Image.Url">Foto</a>
                </li>
            }
        </ul>
    }
    </div>
</div>
