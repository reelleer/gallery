<div class="row margin-top">
    <div class="col-sm-12">
        <form action="/" method="post">
            <input type="text"
                   name="query"
                   value="@Model.ResultsFor"
                   required />
        </form>
        @if (Model.Response == "error")
        {
            <p class="h2">Got goose bumps! @(Model.Error).</p>
        }
    </div>
</div>
@if (Model.ResultsFor != null)
{
    <div class="row margin-top">
        @foreach (var hero in Model.Results)
        {
            <article class="col-xs-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="@hero.Image.Url" alt="@hero.Name">
                </a>
                <header class="hero__title">@hero.Name</header>
            </article>
        }
    </div>
}

