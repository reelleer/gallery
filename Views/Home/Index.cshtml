@model Gallary.Models.SearchResult
@{
    ViewBag.Title = "Gallary";
}

 @if (Model.Response == "error")
{
<div class="row my-3">
    <div class="col">
        <div class="alert alert-primary" role="alert">
            <p class="h2">
                Got goose bumps!.
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder2-open" viewBox="0 0 16 16">
                    <path d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v.64c.57.265.94.876.856 1.546l-.64 5.124A2.5 2.5 0 0 1 12.733 15H3.266a2.5 2.5 0 0 1-2.481-2.19l-.64-5.124A1.5 1.5 0 0 1 1 6.14V3.5zM2 6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3H2.5a.5.5 0 0 0-.5.5V6zm-.367 1a.5.5 0 0 0-.496.562l.64 5.124A1.5 1.5 0 0 0 3.266 14h9.468a1.5 1.5 0 0 0 1.489-1.314l.64-5.124A.5.5 0 0 0 14.367 7H1.633z"></path>
                </svg>
                <span class="text-capitalize">@(Model.Error)</span>
            </p>
        </div>
       
    </div>
</div>
}
@if (Model.ResultsFor != null)
{
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 my-2">
    @foreach (var character in Model.Results)
    {
    <article class="col">
        <div class="card shadow-sm">
        <a href="@Url.RouteUrl("Details", new { id = character.Id })">
            <img src="@character.Image.Url" alt="@character.Name" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title card__title">
                    <strong>@character.Name</strong> (@character.Appearance.Gender)
                </h5>
            </div>
        </a>
        </div>
    </article>
    }
</div>
}

